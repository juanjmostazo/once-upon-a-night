
float4 main(uniform float time,
			uniform float time_scale,
			uniform float alpha,
			uniform float color_r,
			uniform float color_g,
			uniform float color_b
) : COLOR
{
   float4 color;
   color.x = color_r;
   color.y = color_g;
   color.z = color_b;
   color.w =  alpha * ((sin(time * time_scale) / 3.14 + 1.0) / 2.0);
   return color;
}
