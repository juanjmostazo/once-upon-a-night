import terrain_texture from BasicTexture.material
import terrain_changeworld from ChangeWorld.material

material platform_d : terrain_texture 
{
	set_texture_alias diffuse_texture platform_big_d.dds
}

material platform_n : terrain_texture 
{
	set_texture_alias diffuse_texture platform_big_n.dds
}

material platform_cw : terrain_changeworld 
{
	set_texture_alias dreams platform_big_d.dds
	set_texture_alias nightmares platform_big_n.dds
}