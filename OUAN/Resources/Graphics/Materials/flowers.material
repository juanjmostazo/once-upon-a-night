import basic_texture from BasicTexture.material
import alpha_test_texture from BasicTexture.material
import default_changeworld_alpha_test from ChangeWorld.material

///FLOWER 1
material flower1_d : basic_texture 
{	
	technique
	{
		pass
		{
			cull_hardware none 
			cull_software none 
			texture_unit diffuse_texture
			{
				texture flower1.dds
			}
		}
	}
}

material flower1_n : basic_texture 
{	
	technique
	{
		pass
		{
			cull_hardware none 
			cull_software none 
			texture_unit diffuse_texture
			{
				texture flower1n.dds
			}
		}
	}
}

material flower1_cw : default_changeworld
{	
	technique
	{
		pass
		{
			cull_hardware none 
			cull_software none 
		        texture_unit dreams
		        {
				texture flower1.dds
				mipmap_bias -1
		        }
		        texture_unit nightmares
		        {
				texture flower1n.dds
				mipmap_bias -1
	                }
		}
	}
}

