material water_foam_d
{
	technique
	{
		pass
		{
			scene_blend alpha_blend
	                        depth_write off	
			texture_unit
			{
				scroll_anim 0 0.1
				texture water_foam_d.dds
			}
		}
	}
}

material water_lake_seabed_d
{
	technique
	{
		pass
		{
			texture_unit
			{
				scroll_anim 0 0.1
				scroll 0 0.2
				texture water_seabed_d.dds
			}
		}
	}
}

