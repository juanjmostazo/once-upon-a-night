material waterfall_foam
{
	technique
	{
		pass
		{
			scene_blend alpha_blend
	                        depth_write off	
			texture_unit
			{
				scroll_anim 0 0.6
				texture foam_watterfall01_mountain2.dds
			}
		}

	}
}

