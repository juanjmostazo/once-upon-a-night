//FOG3
material fog3_d
{
	technique
	{
		pass
		{
       		scene_blend alpha_blend
			depth_write off
			texture_unit diffuse_texture
			{
				texture fog_mask.dds
			}
			texture_unit alpha_texture
			{
				texture fog3_d.dds
				colour_op replace
			}
		}
	}
}

material fog3_n
{
	technique
	{
		pass
		{
			scene_blend alpha_blend
			depth_write off
			texture_unit alpha_texture
			{
				texture fog_mask.dds
			}
			texture_unit diffuse_texture
			{
				texture fog3_n.dds
				colour_op replace
			}
		}
	}
}

material fog3_cw : default_changeworld_alpha_blending
{
	set_texture_alias dreams fog3_d.dds
	set_texture_alias nightmares fog3_n.dds
}