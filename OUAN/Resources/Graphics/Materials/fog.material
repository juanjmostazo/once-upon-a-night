import basic_texture from BasicTexture.material
import alpha_blending_texture from BasicTexture.material
import default_changeworld from ChangeWorld.material
import default_changeworld_alpha_blending from ChangeWorld.material

//FOG1
material fog1_d : default_changeworld_alpha_blending
{
	technique
	{
		pass
		{
			scene_blend alpha_blend
			depth_write off
		      vertex_program_ref erosion_vs
		      {
				
		      }
		      fragment_program_ref erosion_fs
		      {
				param_named mix_factor float 0
				param_named scroll_animation float3 0.01 0.0
0.0
				param_named tiling float3 3 3
0.0
		      }
			texture_unit changeworld
			{
			}
			texture_unit dreams
			{
				texture fog1_d.dds
			}
			texture_unit nightmares
			{
				texture fog1_n.dds
			}
		}
	}
}

