
float4 main(uniform float alpha_value,
			uniform float time,
			uniform float time_factor,
			uniform float color_r,
			uniform float color_g,
			uniform float color_b
) : COLOR
{
   float4 color;
   color.x = color_r;
   color.y = color_g;
   color.z = color_b;
   color.w =  alpha_value * ((sin(time * time_factor) / 3.14 + 1.0) / 2.0);
   return color;
}
