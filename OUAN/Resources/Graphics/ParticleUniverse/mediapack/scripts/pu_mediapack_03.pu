system PUMediaPack/DirtExplosion
{
	scale 											0.1 0.1 0.1
    technique
    {
        visual_particle_quota                       30
        material                                    PUMediaPack/Dirt_11
        renderer                                    Billboard
        {
            billboard_type                          oriented_self
            billboard_origin                        bottom_center
        }
        
        emitter                                     Point
        {
            particle_width                          dyn_random
            {
                min                                 5
                max                                 12.5
            }
            particle_height                         dyn_random
            {
                min                                 20
                max                                 60
            }
            emission_rate                           15
            angle                                   40
            force_emission                          true
            time_to_live                            dyn_random
            {
                min                                 1.8
                max                                 3.4
            }
            direction                               0 1 0
            velocity                                1
            colour                                  0.76 0.7 0.64 1.0
        }
        
        emitter                                     Point
        {
            particle_width                          dyn_random
            {
                min                                 2.5
                max                                 7.5
            }
            particle_height                         dyn_random
            {
                min                                 2
                max                                 7.5
            }
            emission_rate                           15
            angle                                   40
            force_emission                          true
            time_to_live                            dyn_random
            {
                min                                 1.8
                max                                 3.4
            }
            direction                               0 0.5 0
            velocity                                1
            colour                                  0.76 0.7 0.64 1.0
        }

        affector                                    Scale
        {
            x_scale                                 dyn_curved_linear
            {
                control_point                       0.0 1000
                control_point                       0.2 100
                control_point                       0.3 30
                control_point                       1.0 0.0
            }

            y_scale                                 dyn_curved_linear
            {
                control_point                       0.0 1000
                control_point                       0.1 400
                control_point                       0.2 100
                control_point                       1.0 20.0
            }

        }

        use_alias                                   $PUMediaPack/ColourAffectorFade_07
    }

    technique
    {
        visual_particle_quota                       100
        material                                    PUMediaPack/Smoke_11
        renderer                                    Billboard
        {
            billboard_type                          oriented_self
        }
        
        emitter                                     Point
        {
            all_particle_dimensions                 dyn_random
            {
                min                                 5
                max                                 20
            }
            emission_rate                           100
            angle                                   10
            force_emission                          true
            time_to_live                            4
            direction                               0 1 0
            velocity                                dyn_random
            {
                min                                 300
                max                                 700
            }
            colour                                  0.32 0.3 0.2 1.0
        }

        affector                                    LinearForce
        {
            force_aff_vector                        0 -500 0
        }

        use_alias                                   $PUMediaPack/ColourAffectorFade_07
    }
}



