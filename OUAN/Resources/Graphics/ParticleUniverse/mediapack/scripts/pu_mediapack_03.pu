        renderer Billboard                          
        {
            billboard_type                          perpendicular_common
            common_direction                        0 1 0
            common_up_vector                        0 0 1
        }
        
        emitter                                     Point    wooshEmitter
        {
            emission_rate                           1
            force_emission                          true
            time_to_live                            1
            direction                               0 0 0
        }
        
        affector                                    Scale
        {
