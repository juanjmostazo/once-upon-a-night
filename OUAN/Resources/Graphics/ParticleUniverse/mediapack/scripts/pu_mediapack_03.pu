system PUMediaPack/ElectroShield
{
    fast_forward                                    1 0.1
    technique
    {
        renderer                                    Billboard
        {
            billboard_type                          oriented_shape
            billboard_origin                        bottom_center
        }
        material                                    PUMediaPack/Spark_01
        default_particle_width                      80
        default_particle_height                     1
        visual_particle_quota                       100
        emitted_emitter_quota                       10

        emitter                                     Point    ElectroPoint
        {
            emission_rate                           4
            time_to_live                            2
            emits                                   emitter_particle   ElectroCircle
            duration                                5
            direction                               0 0 0
        }

        emitter                                     Circle    ElectroCircle
        {
            circle_em_radius                        200
            circle_em_random                        false
            circle_em_step                          0.4
            emission_rate                           16
            direction                               0 1 0
            velocity                                40
            time_to_live                            1
            force_emission                          true
        }

        affector                                    Align
        {
            exclude_emitter                         "ElectroPoint"
            align_aff_resize                        true

        }

        affector                                    Randomiser
        {
            exclude_emitter                         "ElectroPoint"
            rand_aff_direction                      false
            rand_aff_max_deviation_x                2
            rand_aff_max_deviation_y                4
            rand_aff_max_deviation_z                2
            rand_aff_time_step                      0.01
        }

        use_alias                                   $PUMediaPack/ColourAffectorFade_04

        use_alias                                   $PUMediaPack/OnClearDoStopSystem
    }
}





